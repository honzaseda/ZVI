                  </AnchorPane>
                  <AnchorPane fx:id="matrixOptions" layoutY="48.0" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #DBDBDB;" visible="false">
                     <children>
                        <RadioButton fx:id="fourNeighbours" layoutX="14.0" layoutY="32.0" mnemonicParsing="false" text="4-okolí">
                           <toggleGroup>
                              <ToggleGroup fx:id="neighbours" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="eightNeighbours" layoutX="125.0" layoutY="32.0" mnemonicParsing="false" selected="true" text="8-okolí" toggleGroup="$neighbours" />
                        <Label layoutX="14.0" layoutY="14.0" text="Použité okolí bodů" />
                        <Button fx:id="matrixSegmentationBtn" layoutX="14.0" layoutY="63.0" mnemonicParsing="false" onAction="#matrixSegmentation" text="Segmentovat" />
                     </children>
                  </AnchorPane>
               </children>
            </AnchorPane>
            <AnchorPane layoutX="284.0" layoutY="15.0">
               <children>
                  <ImageView fx:id="segmentedImageView" fitHeight="304.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
                  <AreaChart fx:id="histogramChart" alternativeRowFillVisible="false" animated="false" createSymbols="false" layoutY="275.0" legendVisible="false" prefHeight="250.0" prefWidth="400.0" style="-fx-background-color: #DBDBDB;" title="histogram" verticalGridLinesVisible="false" visible="false">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </AreaChart>
               </children>
            </AnchorPane>
      </children>
    </AnchorPane>
  </children>
</VBox>
