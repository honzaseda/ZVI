            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="561.0" prefWidth="961.0" VBox.vgrow="ALWAYS">
      <children>
            <ImageView fx:id="loadedImageView" fitHeight="353.0" fitWidth="298.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
