  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Soubor">
          <items>
            <MenuItem fx:id="fileOpen" mnemonicParsing="false" onAction="#fileChooser" text="Otevřít..." />
            <MenuItem mnemonicParsing="false" text="Uložit" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Zavřít" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="509.0" prefWidth="1045.0" VBox.vgrow="ALWAYS">
      <children>
            <AnchorPane layoutX="14.0" layoutY="15.0" style="-fx-background-color: #DBDBDB;">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" layoutX="41.0" layoutY="117.0" prefHeight="250.0" prefWidth="250.0" text="Není načten žádný obrázek" textAlignment="CENTER" textFill="#5b5b5b" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                  <ImageView fx:id="loadedImageView" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </children>
            </AnchorPane>
            <AnchorPane layoutX="14.0" layoutY="274.0">
               <children>
                  <Label text="Metoda segmentace" />
                  <ChoiceBox fx:id="segmentationMethod" layoutY="17.0" prefHeight="25.0" prefWidth="250.0" style="-fx-min-width: 250;" />
                  <AnchorPane fx:id="manualThresholdOptions" layoutY="48.0" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #DBDBDB;" visible="false">
                     <children>
                        <CheckBox fx:id="filterOption" layoutX="10.0" layoutY="6.0" mnemonicParsing="false" text="Použít filtrování histogramu" />
                        <TextField fx:id="manualThresholdValue" layoutX="10.0" layoutY="100.0" prefHeight="25.0" prefWidth="225.0" text="1" />
                        <Label layoutX="10.0" layoutY="83.0" text="Práh segmentace" />
                        <Button fx:id="createHistogram" layoutX="65.0" layoutY="30.0" mnemonicParsing="false" onAction="#createHistogramManually" text="Vytvořit histogram" />
                        <Button layoutX="35.0" layoutY="132.0" mnemonicParsing="false" onAction="#manualSegmentation" text="Ručně prahovaná segmentace" />
                        <Label fx:id="manualThresholdError" alignment="BOTTOM_CENTER" contentDisplay="CENTER" prefHeight="200.0" prefWidth="250.0" textAlignment="CENTER" textFill="#e40000" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
